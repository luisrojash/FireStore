<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="180dp">

    <EditText
        android:id="@+id/editNombrePersonaDiag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Ingrese nombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editApellidoPersonaDiag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Ingrese apellido"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editNombrePersonaDiag"
        app:layout_constraintStart_toStartOf="@+id/editNombrePersonaDiag"
        app:layout_constraintTop_toBottomOf="@+id/editNombrePersonaDiag" />

    <Button
        android:id="@+id/buttonEditarDiag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Editar"
        app:layout_constraintEnd_toEndOf="@+id/editApellidoPersonaDiag"
        app:layout_constraintStart_toStartOf="@+id/guideLine"
        app:layout_constraintTop_toBottomOf="@+id/editApellidoPersonaDiag" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonCancelarDiag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Cancelar"
        app:layout_constraintEnd_toStartOf="@+id/guideLine"
        app:layout_constraintStart_toStartOf="@+id/editApellidoPersonaDiag"
        app:layout_constraintTop_toBottomOf="@+id/editApellidoPersonaDiag" />
</androidx.constraintlayout.widget.ConstraintLayout>